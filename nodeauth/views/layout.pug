doctype html
html
  head
    title Welcome
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  |   
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Node Auth
            |             
            span.icon-bar
            |             
            span.icon-bar
            |             
            span.icon-bar
          |           
          a.navbar-brand(href='/') NodeAuth
        |         
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user 
             li(class=(title== 'Members')? 'active' : '')
              a(href='/') Members
            if !user               
             li(class=(title== 'Register')? 'active' : '')
              a(href='/users/register') Register
                           
             li(class=(title== 'Login')? 'active' : '')
              a(href='/users/login') Login     
          ul.nav.navbar-nav.navbar-right  
            if user 
             li(class= (title== 'logout')? '' : '')
              a(href='/users/logout') Logout
    .container
     !=messages()
     block content
      |       
    hr
    |       
    footer
        p(class='text-center') &copy; 2021 NodeAuth, Inc.
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascript/bootstrap.js')
